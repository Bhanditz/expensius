<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/grid_4x"
    android:paddingEnd="@dimen/grid_4x"
    android:paddingStart="@dimen/grid_4x"
    android:paddingTop="@dimen/grid_4x">

    <TextView
        android:id="@+id/balanceCaptionTextView"
        style="@style/TextView"
        android:layout_marginEnd="@dimen/grid_1x"
        android:text="@string/balance"
        android:textAppearance="@style/Text.Caption"
        app:layout_constraintBaseline_toBaselineOf="@+id/balanceTextView" />

    <TextView
        android:id="@+id/expensesCaptionTextView"
        style="@style/TextView"
        android:text="@string/expenses"
        android:textAppearance="@style/Text.Caption"
        app:layout_constraintBaseline_toBaselineOf="@+id/expensesTextView" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="end"
        app:constraint_referenced_ids="balanceCaptionTextView, expensesCaptionTextView" />

    <TextView
        android:id="@+id/balanceTextView"
        style="@style/TextView.SingleLine"
        android:layout_width="0dp"
        android:layout_marginStart="@dimen/grid_2x"
        android:layout_marginTop="@dimen/grid_4x"
        android:gravity="end"
        android:textAppearance="@style/Text.Money.Big"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/barrier"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="$ 35,897.41" />

    <TextView
        android:id="@+id/expensesTextView"
        style="@style/TextView.SingleLine"
        android:layout_width="0dp"
        android:layout_marginStart="@dimen/grid_2x"
        android:layout_marginTop="@dimen/grid_1x"
        android:gravity="end"
        android:textAppearance="@style/Text.Money.Big.Expense"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/barrier"
        app:layout_constraintTop_toBottomOf="@+id/balanceTextView"
        tools:text="$ 2,125.87" />

</androidx.constraintlayout.widget.ConstraintLayout>