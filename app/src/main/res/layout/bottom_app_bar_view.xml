<com.mvcoding.expensius.feature.main.BottomAppBarView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="?colorPrimaryDark"
    android:clipToPadding="false"
    android:paddingTop="@dimen/grid_1x"
    tools:layout_gravity="bottom">

    <ImageButton
        style="@style/Button.Flat.Borderless"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_action_menu"
        android:tint="?android:textColorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/createFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:layout_marginTop="@dimen/grid_1x"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</com.mvcoding.expensius.feature.main.BottomAppBarView>