<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="themeInverse">@style/AppTheme.Inverse</item>

        <item name="android:windowBackground">@color/background</item>
        <item name="android:statusBarColor">#66697b</item>
        <item name="android:navigationBarColor">#3b3e4f</item>

        <item name="colorPrimary">#66697b</item>
        <item name="colorPrimaryDark">#3b3e4f</item>
        <item name="colorPrimaryLight">#9497aa</item>
        <item name="colorAccent">#81d4fa</item>
        <item name="colorAccentLight">#b6ffff</item>
        <item name="colorAccentDark">#4ba3c7</item>

        <item name="colorActionIcon">#727272</item>
        <item name="colorDivider">#33333333</item>
        <item name="colorExpense">@color/red_700</item>
        <item name="colorIncome">@color/light_green_700</item>
        <item name="colorBackgroundPrimary">#ffffff</item>
        <item name="colorBackgroundSecondary">#aaaaaa</item>
        <item name="colorOverlay">#13000000</item>

        <item name="android:textColorPrimary">@color/text_light</item>
        <item name="android:textColorPrimaryInverse">@color/text_dark</item>
        <item name="android:textColorSecondary">@color/text_light_secondary</item>
        <item name="android:textColorSecondaryInverse">@color/text_dark_secondary</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Inverse" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="themeInverse">@style/AppTheme</item>

        <item name="colorActionIcon">#fefefe</item>
        <item name="colorBackgroundPrimary">#333333</item>
        <item name="colorBackgroundSecondary">#666666</item>

        <item name="android:textColorPrimary">@color/text_light</item>
        <item name="android:textColorPrimaryInverse">@color/text_dark</item>
        <item name="android:textColorSecondary">@color/text_light_secondary</item>
        <item name="android:textColorSecondaryInverse">@color/text_dark_secondary</item>

        <item name="android:windowBackground">@color/backgroundWindowInverse</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>

    <style name="AppTheme.Splash">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>